USE PROYECTOJH;

CREATE TABLE EMPLEADOSBANCO
(
ID INT AUTO_INCREMENT PRIMARY KEY, NOMBRE VARCHAR(30), APELLIDO VARCHAR(30), SUELDOS FLOAT, FECHA_INICIO DATE, FECHA_VENCIMIENTO DATE
) ;
DESC EMPLEADOSBANCO;
