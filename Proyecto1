 SELECT * FROM EMPLEADOSBANCO;
# diferencia entre la fecha actual y 11 e noviembre
# diferencia entre 2023-05-01 y el  2023-04-15
# diferencia en días entre el 1 de mayo de 2023 y el 15 de abril de 2023.
# diferencia en semanas entre 2023-05-01 y 2023-04-15
# diferencia en meses entre  2023-05-01 y 2023-04-15
# diferencia en años entre 2023-05-01 y 2028-04-15 
 
SELECT DATEDIFF( '2023-11-11', curdate()) AS 'diferencia fecha hoy a 11 de noviembre'; 
SELECT DATEDIFF('2023-05-01',  '2023-04-15') AS  'DIFERENCIA FECHA';
SELECT DATEDIFF('2023-05-1', '2023-04-15') AS 'DIFERENCIA';
SELECT TIMESTAMPDIFF(WEEK,'2023-04-15','2023-05-01') AS 'DIFERENCIA EN SEMANAS'; # ME AYUDE CON EL TIMESTAMPDIFF
SELECT TIMESTAMPDIFF(MONTH, '2023-05-01','2023-04-15') AS DIFERENCIA_EN_MESES; 
SELECT TIMESTAMPDIFF(YEAR,'2023-05-01','2028-04-15' ) AS 'DIFERENCIA EN AÑOS'; 

 DESC EMPLEADOSBANCO;
 SELECT ID,NOMBRE AS USUARIO, SUELDOS, SUELDOS*1.20 AS AUMENTO_TRIMESTRAL FROM EMPLEADOSBANCO;
