SELECT DNI, UPPER(NOMBRE) AS NOMBRE, UPPER(APELLIDO) AS APELLIDO FROM CLIENTES;  
SELECT DNI, LOWER(NOMBRE) AS NOMBRE, LOWER(APELLIDO) AS APELLIDO FROM CLIENTES;
SELECT CONCAT('HOLA ', 'A ','LOS ', 'USUARIOS ', NOMBRE) FROM CLIENTES;  
SELECT CONCAT(TRIM(APELLIDO), TRIM(NOMBRE), '@GMAIL.COM') FROM CLIENTES;
SELECT CONCAT('HOLA', ' ', 'A',' ', 'LOS', ' ',  'USUARIOS ', ' ', NOMBRE) FROM CLIENTES;  
SELECT concat_ws(' ','HOLA','A','LOS','USUARIOS ', NOMBRE) FROM CLIENTES;  
